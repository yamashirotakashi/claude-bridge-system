# Claude Bridge System - Environment Configuration Template
# Copy this to .env and configure for your deployment

# Build Configuration
BUILD_VERSION=1.0.0
BUILD_TIMESTAMP=
ENVIRONMENT=production

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# Network Configuration
BRIDGE_PORT=8080
BRIDGE_SECURE_PORT=8443
METRICS_PORT=9090
HTTP_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000

# Database Configuration
POSTGRES_DB=claude_bridge
POSTGRES_USER=claude
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
API_KEY_SECRET=your_api_key_secret_here
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_base64

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/server.crt
SSL_KEY_PATH=/app/certs/server.key
SSL_CA_PATH=/app/certs/ca.crt

# Claude Desktop Integration
CLAUDE_DESKTOP_API_URL=http://localhost:3001
CLAUDE_DESKTOP_API_KEY=your_desktop_api_key_here
CLAUDE_DESKTOP_WEBHOOK_SECRET=your_webhook_secret_here

# MIS Integration
MIS_MEMORY_PATH=/app/data/mis_memory
MIS_BACKUP_ENABLED=true
MIS_BACKUP_INTERVAL=3600

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
AUDIT_LOG_ENABLED=true

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Performance Configuration
MAX_WORKERS=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5

# Storage Configuration
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=365

# Feature Flags
ENABLE_DESKTOP_SYNC=true
ENABLE_MIS_INTEGRATION=true
ENABLE_VULNERABILITY_SCANNER=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# Development Settings (only for dev environment)
DEV_RELOAD=false
DEV_DEBUG_SQL=false
DEV_MOCK_DESKTOP=false

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Logging Configuration
LOG_FORMAT=json
LOG_STRUCTURED=true
LOG_FILE_PATH=/app/logs/claude_bridge.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5